      VALUE "FileDescription",  "Convay's game of life\0"
      VALUE "FileVersion",      GAME_DOTTED_VERSION "\0"
      VALUE "InternalName",     "game.exe\0"
      VALUE "LegalCopyright",   "Copyright (C) Anton Chumakov\0"
      VALUE "LegalTrademarks",  "\0"
      VALUE "OriginalFilename", "game.exe\0"
      VALUE "ProductName",      "GameOfLife\0"
      VALUE "ProductVersion",   GAME_DOTTED_VERSION "\0"
      VALUE "Comments",         "\0"
    END
  END
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x0409, 0  /* US English, ASCII */
  END
END
