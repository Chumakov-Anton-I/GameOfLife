#include <winver.h>
#include "rcVersion.h"

appIcon ICON "..\\images\\appIcon.ico"

VS_VERSION_INFO     VERSIONINFO
  FILEVERSION       GAME_MAJOR_VERSION,GAME_MINOR_VERSION,GAME_PATCH_VERSION,0
  PRODUCTVERSION    GAME_MAJOR_VERSION,GAME_MINOR_VERSION,GAME_PATCH_VERSION,0
  FILEFLAGSMASK     VS_FFI_FILEFLAGSMASK
#ifdef _DEBUG
  FILEFLAGS     VS_FF_DEBUG
#else
  FILEFLAGS     0
#endif
  FILEOS        VOS_NT_WINDOWS32
  FILETYPE      VFT_APP
